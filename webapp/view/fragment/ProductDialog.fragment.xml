<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    <Dialog id="_IDGenDialog" title="{= ${/isEditMode} ? 'Edit Product' : 'Create Product'}">
        <content>
            <VBox id="_IDGenVBox">
                <Label id="_IDGenLabel7" text="{i18n>productIdLabel}" />
                <Input id="_IDGenInput" value="{/ProductID}" enabled="{= !${/isEditMode}}" />
                <Label id="_IDGenLabel8" text="{i18n>productNameLabel}" />
                <Input id="_IDGenInput1" value="{/Name}" />
                <Label id="_IDGenLabel9" text="{i18n>priceLabel}" />
                <Input id="_IDGenInput2" value="{/Price}" />
                <Label id="_IDGenLabel10" text="{i18n>currencyLabel}" />a
                <Input id="_IDGenInput3" value="{/CurrencyCode}" />
            </VBox>
        </content>
        <beginButton>
            <Button id="_IDGenButton3" text="{i18n>saveButton}" press=".onSaveProduct" />
        </beginButton>
        <endButton>
            <Button id="_IDGenButton5" text="{i18n>cancelButton}" press=".onCloseDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>