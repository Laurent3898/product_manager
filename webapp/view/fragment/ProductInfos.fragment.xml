<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout.form">
    <layout:SimpleForm id="productForm" editable="false" layout="ResponsiveGridLayout">
        <Label id="_IDGenLabel1" text="Product ID" />
        <Text id="_IDGenText11" text="{ProductID}" />
        <Label id="_IDGenLabel2" text="Name" />
        <Text id="_IDGenText12" text="{Name}" />
        <Label id="_IDGenLabel3" text="Description" />
        <Text id="_IDGenText13" text="{Description}" />
        <Label id="_IDGenLabel4" text="Price" />
        <ObjectNumber id="_IDGenObjectNumber" number="{Price}" unit="{CurrencyCode}" />
        <Label id="_IDGenLabel5" text="Category" />
        <Text id="_IDGenText14" text="{Category}" />
        <Label id="_IDGenLabel6" text="{i18n>ReleaseDate}" />
        <Text id="_IDGenText15" text="{path: 'CreatedAt', formatter: '.formatter.formatReleaseDate'}" />
    </layout:SimpleForm>
</core:FragmentDefinition>